<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoAn_IE307_N11.Views.TimeIntervalPopup">
    <StackLayout>

        <Button Text="Ngày" Clicked="Day_Clicked" 
                Background="Transparent" TextColor="{StaticResource Foreground}" />
        <Button Text="Tuần" Clicked="Week_Clicked" 
                Background="Transparent" TextColor="{StaticResource Foreground}" />
        <Button Text="Tháng" Clicked="Month_Clicked" 
                Background="Transparent" TextColor="{StaticResource Foreground}" />
        <Button Text="Năm" Clicked="Year_Clicked" 
                Background="Transparent" TextColor="{StaticResource Foreground}" />

    </StackLayout>

</xct:Popup>