           xmlns="http://xamarin.com/schemas/2014/forms" 
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="DoAn_IE307_N11.Views.TransactionPopup"
           VerticalOptions="Center">

    <StackLayout>

        <Button Text="Khoảng thời gian" Clicked="TimeInterval_Clicked" 
                Background="Transparent" TextColor="{StaticResource Foreground}" />
        <Button Text="Xem theo giao dịch" 
                Background="Transparent" TextColor="{StaticResource Foreground}" />
        <Button Text="Điều chỉnh số dư" 
                Background="Transparent" TextColor="{StaticResource Foreground}" />
        <Button Text="Sửa ví" 
                Background="Transparent" TextColor="{StaticResource Foreground}" />
        
    </StackLayout>

</xct:Popup>